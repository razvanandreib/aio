---
import Button from "./Button.astro";
import ButtonContact from "./Button-Contact.astro";
import { Image } from "astro:assets";

import Logo from "../assets/logo/aio-logo-trans.png";

import { navLinks } from "../utils/lib";

export interface Props {
  para1: string;
  title: string;
  para2: string;
  url: string;
  show: string;
  linkBtn: string;
  textBtn: string;
}

const { para1, title, para2, url, show, linkBtn, textBtn } = Astro.props;
---

<header>
  <nav>
    <div class="navbar-container">
      <a href="/">
        <Image src={Logo} alt="logo AIO" />
      </a>
      <div class="navbar-links">
        {navLinks.map((info) => <a href={info.link}>{info.text}</a>)}
        <ButtonContact text="Contact" link="/contact" />
      </div>
      <Button text="Contact" link="/contact" />
      <div class="burger-meniu">Meniu</div>
    </div>
  </nav>
  <div class="header-container">
    <p>{para1}</p>
    <h1>{title}</h1>
    <p>{para2}</p>
    <a class={`btn-${show}`} id="btn-main" href={linkBtn}>{textBtn}</a>

    <!-- <Button text="Afla mai multe" link="/implicate" class="hide" /> -->
  </div>
  <video src="/joaca.mp4" autoplay loop></video>
</header>

<style lang="scss">
  @use "../styles/abstracts/index.scss" as *;

  header {
    position: relative;
    height: 100svh;
    width: 100%;
    // background-image: url("/imagini/header/header-prima-pagina.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    > video {
      z-index: 2;
      position: absolute;
      object-fit: cover;
      inset: 0;
      width: 100%;
      height: 100svh;
    }
  }

  .header-container {
    position: relative;

    @include flex-center;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    max-width: 80rem;
    width: 100%;
    margin: 0 auto;
    text-align: center;
    z-index: 3;

    > p {
      font-size: 2rem;
      color: #ffff;
      font-family: "Montserrat", sans-serif;
      font-weight: 500;
    }
    > p:nth-of-type(2) {
      font-weight: 300;
      padding: 0 0 2rem 0;
    }

    > h1 {
      font-size: 5rem;
      color: #ffff;
      font-family: "Montserrat", sans-serif;
      font-weight: 500;
    }
  }

  nav {
    @include flex-center;
    width: calc(100% - 2rem);
    padding: 1rem;
    position: relative;
    z-index: 3;
  }

  .navbar-links {
    @include flex-just-center;
    gap: 4rem;

    > a {
      @include nav-link;
    }
  }

  .navbar-container {
    @include flex-align-center;
    justify-content: space-between;
    width: 100%;
    max-width: 102.4rem;
    margin: 0 2rem;
  }
  .burger-meniu {
    color: white;
    padding: 1.2rem 2rem;
    background-color: $primary-color;
    font-size: 1.5rem;
  }

  @media (min-width: 600px) {
    .burger-meniu {
      display: none;
    }
  }
  @media (max-width: 600px) {
    .navbar-container {
      position: relative;
    }
    .btn-second {
      display: block;
    }

    .navbar-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 7rem;
      width: 100%;
      background-color: white;
      padding: 10rem 0;
      > a {
        color: black;
      }
    }
  }

  #btn-main {
    @include nav-link;
    background-color: $tertiary-color;
    padding: 1.2rem 2rem;
    width: auto;
  }

  #btn-main:hover {
    @include nav-link;
    background-color: $primary-color;
    padding: 1.2rem 2rem;
  }

  @media (max-width: 600px) {
    #btn-main {
      display: none;
    }
  }

  .btn-hide {
    display: none;
  }
  .btn-show {
    display: block;
  }

  .display {
    @include flex-center;
  }

  .image-back-index {
    background-image: url("/imagini/header/header-prima-pagina.png");
  }

  .image-back-misiune {
    background-image: url("/imagini/header/header-misiunea-noastra.png");
  }
  .image-back-implicate {
    background-image: url("/imagini/header/header-cum-te-poti-implica.png");
  }

  .image-back-contact {
    background-image: url("/imagini/header/header-contacta.png");
  }
</style>

<script lang="javascript">
  let burgerMeniu = document.querySelector(".burger-meniu");
  let navbarLinks = document.querySelector(".navbar-links");
  burgerMeniu.addEventListener("click", function () {
    navbarLinks.classList.toggle("display");
  });
</script>
