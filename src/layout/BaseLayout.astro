---
import "../styles/base.scss";

export interface Props {
  title: string;
  description: string;
  content: string;
}

const { title, description, content } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name={description} content={content} />
  </head>
  <body>
    <slot />
  </body>
</html>
